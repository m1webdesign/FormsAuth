@model MB.ViewModels.BusFile

@using (Html.BeginForm("EditBus", 
                        "ManageBuses", 
                        FormMethod.Post,
                        new { @id = "target", enctype="multipart/form-data" }))  //give it a name so can update validation after gets dynamically loaded into dialog
    {
    
    @Html.ValidationSummary()
    
    
    <div id="update-message" class="error invisible"></div>
    <fieldset>
        <legend>Bus Details</legend>
        @Html.HiddenFor(model => model.bus.ID)
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.bus.MakeOfBus)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.bus.MakeOfBus)
                                @Html.ValidationMessageFor(model => model.bus.MakeOfBus)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.bus.PreviousDamage)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.bus.PreviousDamage)
                                @Html.ValidationMessageFor(model => model.bus.PreviousDamage)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.bus.SeatNumber)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.bus.SeatNumber)
                                @Html.ValidationMessageFor(model => model.bus.SeatNumber)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.bus.ImageURL)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                        
                                <input type="file" name="image" id="image" />
                                @Html.ValidationMessageFor(model => model.bus.ImageURL)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">

                                @Html.LabelFor(model => model.bus.IconURL)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <input type="file" name="icon" id="icon" />
                                @Html.ValidationMessageFor(model => model.bus.IconURL)
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
    </fieldset>
    }